<main>
    <div class="container-main">
        <div class="container">
            <div class="header">
                <h1>ÜYELER</h1>
            </div>
            {{> admin-nav}}
            
                <div class="table-category">
                <table class="table tableCategory">
                    <thead>
                        <tr>
                            <th> ID</th>
                            <th> USERNAME</th>
                            <th> EMAİL</th>
                            <th> PASSWORD</th>
                            <th> DELETE</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}} 
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{username}}</td>
                            <td>{{email}}</td>
                            <td>{{password}}</td>
                            <td>
                                <form action="/admin/uyeler/{{_id}}?_method=DELETE" method="post">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class=" btn btn-delete">DELETE</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                
            </div>
            </div>
            

        </div>

    </div>
</main>
